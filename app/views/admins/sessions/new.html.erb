<div class="layout-container">
  <div class="page-container bg-blue-grey-900">
    <div class="container-full">
      <div class="container container-xs">
        <%= image_tag "seat-joy-logo-transparent.png", class: "mv-lg block-center img-responsive" %>

        <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: { novalidate: "novalidate", class: "card b0 form-validate" }) do |f| %>

          <div class="card-heading">
            <div class="card-title text-center">Login</div>
          </div>

          <div class="card-body">
            <div class="mda-form-group mda-input-group">
              <div class="mda-form-control">
                <%= f.email_field :email, autofocus: true, class: "form-control", "aria-required" => "true" %>
                <div class="mda-form-control-line"></div>
                <label>Email address</label>
              </div><span class="mda-input-group-addon"><em class="ion-ios-email-outline icon-lg"></em></span>
            </div>

            <div class="mda-form-group mda-input-group">
              <div class="mda-form-control">
                <%= f.password_field :password, autocomplete: "off", class: "form-control", "aria-required" => "true" %>
                <div class="mda-form-control-line"></div>
                <label>Password</label>
              </div><span class="mda-input-group-addon"><em class="ion-ios-locked-outline icon-lg"></em></span>
            </div>
          </div>

          <%= f.submit "Authenticate", class: "btn btn-primary btn-flat" %>
        <% end %>

      </div>
    </div>
  </div>
</div>
