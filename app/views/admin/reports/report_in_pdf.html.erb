<section>
  <div class="container-fluid">
    <h4 class="mt0 small-mt0">Hourly Sales</h4><br/>

    <div class="card">
      <div class="table-responsive bootgrid">
        <table class="table table-striped">
          <thead>
            <tr>
              <th data-column-id="time-range">Time Range</th>
              <th data-column-id="transactions"># Transactions</th>
              <th data-column-id="items"># Items</th>
              <th data-column-id="avg-sales-check">Avg. Sales/Check</th>
              <th data-column-id="sales">Sales</th>
              <th data-column-id="sales-percentage">% Sales</th>
            </tr>
          </thead>
          <tbody>
            <% 23.times do |index| %>
              <tr>
                <td>
                  <%= fifteen_minutes_periods[index] %> - <%= fifteen_minutes_periods[index + 1] %>
                </td>
                <td><%= (1..50).to_a.sample %></td>
                <td><%= (10..500).to_a.sample %></td>
                <td><%= (10..25).to_a.sample %></td>
                <td><%= (700..1500).to_a.sample %></td>
                <td>% <%= (7..70).to_a.sample %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>

    <div style="page-break-after: always;"></div>

    <div class="card">
      <div class="table-responsive bootgrid">
        <table class="table table-striped">
          <thead>
            <tr>
              <th data-column-id="time-range">Time Range</th>
              <th data-column-id="transactions"># Transactions</th>
              <th data-column-id="items"># Items</th>
              <th data-column-id="avg-sales-check">Avg. Sales/Check</th>
              <th data-column-id="sales">Sales</th>
              <th data-column-id="sales-percentage">% Sales</th>
            </tr>
          </thead>
          <tbody>
            <% 21.times do |index| %>
              <tr>
                <td>
                  <%= fifteen_minutes_periods[index + 23] %> - <%= fifteen_minutes_periods[index + 23 + 1] %>
                </td>
                <td><%= (1..50).to_a.sample %></td>
                <td><%= (10..500).to_a.sample %></td>
                <td><%= (10..25).to_a.sample %></td>
                <td><%= (700..1500).to_a.sample %></td>
                <td>% <%= (7..70).to_a.sample %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>

  <div style="page-break-after: always;"></div>

  <div class="container-fluid">
    <h4 class="mt0 small-mt0">Payments overview</h4><br/>
    <div class="row">
      <div class="col-lg-12">
        <div class="card">
          <div class="card-heading">
            <div class="card-title">Orders Statistics</div><small>Based on the last hours.</small>
          </div>
          <div class="card-body">
            <!-- height set to avoid issue "Invalid dimensions for plot, width = 1497, height = 0" -->
            <div id="bar-flotchart-orders-graph" class="flot-chart flot-chart-lg" style="width:100%;height:400px;"></div>
          </div>
        </div>
      </div>


      <div class="col-lg-12">
        <br/>
        <br/>
        <div class="card">
          <div class="card-heading">
            <div class="card-title">Total Payments - 2824.75</div>
          </div>
          <div class="card-body">
            <!-- height set to avoid issue "Invalid dimensions for plot, width = 1497, height = 0" -->
            <div id="line-flotchart" class="flot-chart flot-chart-lg" style="width:100%;height:400px;"></div>
          </div>
        </div>
      </div>

      <div class="col-lg-2 col-sm-2">
        <div class="well well-lg">
          <h4 class="mt0 small-mt0">Credit (incl. tips)</h4>
          <h4>1073.75</h4>
        </div>
      </div>
      <div class="col-lg-3 col-sm-3">
        <div class="well well-lg">
          <h4 class="mt0 small-mt0">Actual Cash (incl. tips)</h4>
          <h4 class="mt0 small-mt0"></h4>
          <h4>1764.75</h4>
        </div>
      </div>
      <div class="col-lg-2 col-sm-2">
        <div class="well well-lg">
          <h4 class="mt0 small-mt0">Total Discounts</h4>
          <h4>147.75</h4>
        </div>
      </div>
      <div class="col-lg-2 col-sm-2">
        <div class="well well-lg">
          <h4 class="mt0 small-mt0">Sales Tax</h4>
          <h4>231.53</h4>
        </div>
      </div>
      <div class="col-lg-3 col-sm-3">
        <div class="well well-lg">
          <h4 class="mt0 small-mt0">Net Sales (incl. tips)</h4>
          <h4>2593.23</h4>
        </div>
      </div>
    </div>
  </div>

</section>
