<div class="layout-container">
  <%= render partial: "admin/shared/top_nav_bar" %>
  <%= render partial: "admin/shared/side_bar" %>

  <div class="sidebar-layout-obfuscator"></div>
  <!-- Main section-->
  <main class="main-container">
    <!-- Page content-->
    <section>
      <%= render partial: "admin/shared/game_header" %>

      <div class="container-fluid">
        <div class="row">
          <div class="col-xs-6 col-lg-3">
            <div class="card">
              <div class="card-body pv">
                <div class="clearfix">
                  <div class="pull-left">
                    <h4 class="m0 text-thin">350</h4><small class="m0 text-muted"><em class="mr-sm ion-arrow-up-b"></em>Total orders</small>
                  </div>
                  <div class="pull-right mt-lg">
                    <div id="sparkline2" data-line-color="#4caf50" class="sparkline"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-6 col-lg-3">
            <div class="card">
              <div class="card-body pv">
                <div class="clearfix">
                  <div class="pull-left">
                    <h4 class="m0 text-thin">10,200</h4><small class="m0 text-muted"><em class="mr-sm ion-arrow-up-b"></em>Orders delivered</small>
                  </div>
                  <div class="pull-right mt-lg">
                    <div id="sparkline1" data-line-color="#03A9F4" class="sparkline"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-6 col-lg-3 visible-lg">
            <div class="card">
              <div class="card-body pv">
                <div class="clearfix">
                  <div class="pull-left">
                    <h4 class="m0 text-thin">880</h4><small class="m0 text-muted"><em class="mr-sm ion-arrow-up-b"></em>Runners</small>
                  </div>
                  <div class="pull-right mt-lg">
                    <div id="sparkline3" data-line-color="#ab47bc" class="sparkline"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
          <div class="col-xs-6 col-lg-3 visible-lg">
            <div class="card">
              <div class="card-body pv">
                <div class="clearfix">
                  <div class="pull-left">
                    <h4 class="m0 text-thin">780</h4><small class="m0 text-muted"><em class="mr-sm ion-arrow-up-b"></em>Payments made</small>
                  </div>
                  <div class="pull-right mt-lg">
                    <div id="sparkline4" data-line-color="#e91e63" class="sparkline"></div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <h5 class="mt0 small-mt0">Customer Insight</h5>
            <h6 class="mt0 small-mt0">Last 200 payments</h6><br/>
          </div>
          <div class="col-lg-3">
            <div class="card">
              <div class="card-heading">
                <div class="card-title small-card-title">Total Customers</div>
              </div>
              <div class="card-body">
                <div id="pie-flotchart-total-customers" class="flot-chart flot-chart-lg"></div>
              </div>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="card">
              <div class="card-heading">
                <div class="card-title small-card-title">Orders Pending vs. Delivered</div>
              </div>
              <div class="card-body">
                <div id="pie-flotchart-orders-pending-delivered" class="flot-chart flot-chart-lg"></div>
              </div>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="card">
              <div class="card-heading">
                <div class="card-title small-card-title">Total Payments</div>
              </div>
              <div class="card-body">
                <div id="bar-flotchart-total-payments" class="flot-chart flot-chart-lg"></div>
              </div>
            </div>
          </div>
          <div class="col-lg-3">
            <div class="card">
              <div class="card-heading">
                <div class="card-title small-card-title">Average Payments</div>
              </div>
              <div class="card-body">
                <div id="bar-flotchart-average-payments" class="flot-chart flot-chart-lg"></div>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-12">
            <div class="card">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Order Items</th>
                      <th>Completion</th>
                      <th class="text-right">Trend</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="va-middle"><span class="badge bg-pink-500">1</span></td>
                      <td>
                        <p class="m0">Fries</p>
                      </td>
                      <td class="va-middle">50%</td>
                      <td class="text-right va-middle">up <em class="ion-arrow-graph-up-right text-success"></em></td>
                    </tr>
                    <tr>
                      <td class="va-middle"><span class="badge bg-purple-400">2</span></td>
                      <td>
                        <p class="m0">Hamburgers</p>
                      </td>
                      <td class="va-middle">30%</td>
                      <td class="text-right va-middle">down <em class="ion-arrow-graph-down-right text-warning"></em></td>
                    </tr>
                    <tr>
                      <td class="va-middle"><span class="badge bg-indigo-500">3</span></td>
                      <td>
                        <p class="m0">Coke</p>
                      </td>
                      <td class="va-middle">80%</td>
                      <td class="text-right va-middle">up <em class="ion-arrow-graph-up-right text-success"></em></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

        <div class="row">
          <div class="col-lg-4">
            <div class="card">
              <%= image_tag "stadium.png", style: "width:100%" %>
            </div>
          </div>
          <div class="col-lg-8">
            <div class="card">
              <div class="table-responsive">
                <table class="table">
                  <thead>
                    <tr>
                      <th>#</th>
                      <th>Section</th>
                      <th># Orders</th>
                      <th class="text-right">Trend</th>
                    </tr>
                  </thead>
                  <tbody>
                    <tr>
                      <td class="va-middle"><span class="badge bg-pink-500">1</span></td>
                      <td>
                        <p class="m0">F</p>
                      </td>
                      <td class="va-middle">500</td>
                      <td class="text-right va-middle">up <em class="ion-arrow-graph-up-right text-success"></em></td>
                    </tr>
                    <tr>
                      <td class="va-middle"><span class="badge bg-purple-400">2</span></td>
                      <td>
                        <p class="m0">S</p>
                      </td>
                      <td class="va-middle">300</td>
                      <td class="text-right va-middle">down <em class="ion-arrow-graph-down-right text-warning"></em></td>
                    </tr>
                    <tr>
                      <td class="va-middle"><span class="badge bg-indigo-500">3</span></td>
                      <td>
                        <p class="m0">I</p>
                      </td>
                      <td class="va-middle">280</td>
                      <td class="text-right va-middle">up <em class="ion-arrow-graph-up-right text-success"></em></td>
                    </tr>
                    <tr>
                      <td class="va-middle"><span class="badge bg-info">4</span></td>
                      <td>
                        <p class="m0">D</p>
                      </td>
                      <td class="va-middle">180</td>
                      <td class="text-right va-middle">up <em class="ion-arrow-graph-up-right text-success"></em></td>
                    </tr>
                  </tbody>
                </table>
              </div>
            </div>
          </div>
        </div>

      </div>
    </section>

    <%= render partial: "admin/shared/footer" %>
  </main>
</div>
